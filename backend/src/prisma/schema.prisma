generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String         @default("")
  sessions     User_Session[]
  reservations Reservation[]
}

model User_Session {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [user_id], references: [id])
  user_id Int
  token   String @unique
}

model Car_Model {
  id    Int    @id @default(autoincrement())
  name  String
  image String
  price String
  cars  Car[]
}

model Car {
  id               Int           @id @default(autoincrement())
  car_model_id     Int
  model            Car_Model     @relation(fields: [car_model_id], references: [id])
  reservations     Reservation[]
  current_location String
}

model Reservation {
  id               Int      @id @default(autoincrement())
  user_id          Int
  user             User     @relation(fields: [user_id], references: [id])
  car_id           Int
  car              Car      @relation(fields: [car_id], references: [id])
  start_date       DateTime
  end_date         DateTime
  pickup_location  String
  dropoff_location String
  price            Decimal
}
